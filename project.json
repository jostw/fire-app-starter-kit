{
    "name": "hello-project",
    "version": "0.0.1",
    "author": "jos",
    "app": {
        "config": {
            "bower": ".bowerrc",
            "grunt": "package.json",

            "htmlhint": ".htmlhintrc",
            "csslint": ".csslintrc",
            "jshint": ".jshintrc",

            "watch": {
                "livereload": true
            },

            "clean": {
                "force": true
            },

            "rev": {
                "encoding": "utf8",
                "algorithm": "md5",
                "length": 8
            },

            "htmlmin": {
                "removeComments": true,
                "collapseWhitespace": true
            },

            "uglify": {
                "preserveComments": "some"
            }
        },

        "folder": {
            "app": "app",

            "scss": "scss",
            "jsx": "jsx",

            "css": "css",
            "js": "js",

            "vendor": "vendor",
            "temp": ".tmp",

            "dist": "dist"
        },

        "file": {
            "grunt": "Gruntfile.js",
            "gulp": "gulpfile.js",

            "css": "style.css",
            "js": "script.js",

            "index": "index.html"
        },

        "vendor": [
            {
                "folder": "html5shiv/dist",
                "file": "html5shiv.min.js"
            }, {
                "folder": "respond/dest",
                "file": "respond.min.js"
            }, {
                "folder": "jquery/dist",
                "file": "jquery.min.js"
            }
        ],

        "exclude": [
            "html5shiv",
            "respond",
            "modernizr",
            "jquery"
        ]
    }
}
